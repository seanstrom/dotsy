[core]
  excludesfile = ./gitignore_global
  editor = vim
[alias]
  st = status --short --branch
  bs = branch-status
  co = checkout
  cob = checkout -b
  a = add
  k = log --pretty=format:"%C(yellow)%h%Cred%d\\ %Creset%s%Cblue\\ [%cn]" --decorate --graph --all
  ignore = !echo >> .gitignore
[color]
  ui = true
[push]
  default = simple
[merge]
  conflictstyle = diff3
[include]
  path = ./gitconfig_user
